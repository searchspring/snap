{
	"name": "@searchspring/snap",
	"private": true,
	"workspaces": [
		"packages/*",
		"packages/snapps/*"
	],
	"scripts": {
		"commit": "cz",
		"build": "lerna exec --stream 'npm run build'",
		"build:docs": "lerna exec --stream --parallel 'npm run build:docs'",
		"test": "npm run test --workspaces",
		"dev": "lerna exec --parallel --stream 'npm run dev'",
		"dev:docs": "serve ./ -l 2222",
		"lint": "npm run lint --workspaces",
		"clean": "lerna clean -y && rm -rf ./node_modules",
		"format": "lerna exec --parallel --stream 'npm run format'",
		"storybook:preact": "npm run storybook --workspace=@searchspring/snap-preact-components",
		"publish": "lerna publish --conventional-commits --no-git-reset --force-publish --yes",
		"prepare": "husky install"
	},
	"prettier": "@searchspring/prettier",
	"devDependencies": {
		"@searchspring/prettier": "^1.0.2",
		"@searchspring/snapi-types": "^0.1.21",
		"@types/jest": "^27.0.3",
		"@types/jsdom": "^16.2.13",
		"@types/seamless-immutable": "^7.1.16",
		"@typescript-eslint/eslint-plugin": "^5.6.0",
		"@typescript-eslint/parser": "^5.6.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.4.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-react": "^7.27.1",
		"husky": "^7.0.4",
		"jest": "^27.4.3",
		"jsdom": "^19.0.0",
		"lerna": "^4.0.0",
		"lint-staged": "^12.1.2",
		"prettier": "^2.5.1",
		"serve": "^13.0.2",
		"standard-version": "^9.3.2",
		"ts-jest": "^27.1.0",
		"typedoc": "^0.22.10",
		"typescript": "^4.5.2",
		"whatwg-fetch": "^3.6.2"
	},
	"lint-staged": {
		"*.{js,ts,tsx}": [
			"prettier --write"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
