{
  "name": "@searchspring/snap",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "node_modules/.bin/lerna exec --stream 'npm run build'",
    "test": "node_modules/.bin/lerna exec --parallel --stream 'npm run test'",
    "cypress": "kill $(lsof -ti:3333,8888) || node_modules/.bin/lerna exec --stream --scope '@searchspring/snap-preact-demo' 'npm run cypress'",
    "dev": "kill $(lsof -ti:3333,8888) || node_modules/.bin/lerna exec --parallel --stream 'npm run dev'",
    "clean": "node_modules/.bin/lerna clean -y && rm -rf ./node_modules",
    "storybook": "node_modules/.bin/lerna exec --stream --scope '@searchspring/snap-preact-components' 'npm run storybook'"
  },
  "devDependencies": {
    "lerna": "^4.0.0"
  }
}
