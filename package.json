{
	"name": "@searchspring/snap",
	"private": true,
	"workspaces": [
		"packages/*",
		"packages/snapps/*"
	],
	"scripts": {
		"commit": "cz",
		"build": "node_modules/.bin/lerna exec --stream 'npm run build'",
		"build:docs": "node_modules/.bin/lerna exec --stream --parallel 'npm run build:docs'",
		"test": "npm run test --workspaces",
		"dev": "node_modules/.bin/lerna exec --parallel --stream 'npm run dev'",
		"dev:docs": "serve ./ -l 2222",
		"lint": "npm run lint --workspaces",
		"clean": "node_modules/.bin/lerna clean -y && rm -rf ./node_modules",
		"format": "node_modules/.bin/lerna exec --parallel --stream 'npm run format'",
		"storybook:preact": "npm run storybook --workspace=@searchspring/snap-preact-components",
		"version": "node_modules/.bin/lerna version --no-git-reset --yes",
		"publish": "node_modules/.bin/lerna publish --no-git-reset --yes",
		"prepare": "husky install"
	},
	"prettier": "@searchspring/prettier",
	"devDependencies": {
		"@searchspring/prettier": "^1.0.2",
		"@types/jest": "^26.0.22",
		"@types/jsdom": "^16.2.10",
		"@types/seamless-immutable": "^7.1.15",
		"@typescript-eslint/eslint-plugin": "^4.22.0",
		"@typescript-eslint/parser": "^4.22.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^7.24.0",
		"eslint-config-prettier": "^8.2.0",
		"eslint-plugin-react": "^7.23.2",
		"husky": "^6.0.0",
		"jest": "^26.6.3",
		"jsdom": "^16.5.3",
		"lerna": "^4.0.0",
		"lint-staged": "^10.5.4",
		"prettier": "^2.2.1",
		"serve": "^12.0.0",
		"standard-version": "^9.2.0",
		"ts-jest": "^26.5.5",
		"typedoc": "^0.20.36",
		"typescript": "^4.2.4",
		"whatwg-fetch": "^3.6.2"
	},
	"lint-staged": {
		"*.{js,ts,tsx}": [
			"prettier --write"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
