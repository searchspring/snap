{
	"name": "@searchspring/snap-preact-layouts",
	"private": true,
	"version": "0.45.1",
	"description": "development and testing of Snap layouts",
	"author": "Searchspring",
	"license": "MIT",
	"scripts": {
		"analyze": "webpack --config webpack.modern.js --analyze",
		"analyze:universal": "webpack --config webpack.universal.js --analyze",
		"build": "rm -rf ./dist && webpack --config webpack.modern.js && webpack --config webpack.universal.js",
		"build:bundle": "rm -rf ./dist && webpack --config webpack.modern.js && webpack --config webpack.universal.js",
		"build:docs": "echo 'no docs for snap-preact-demo'",
		"cypress": "cypress open --project tests",
		"dev": "kill $(lsof -ti:1111,8888); webpack serve --config webpack.dev.js",
		"format": "prettier --write 'src/**/*.{js,jsx,ts,tsx}'",
		"lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
		"test": "(kill $(lsof -ti:1111,8888); webpack serve --config webpack.dev.js & cypress run --project tests; r=$?; kill $(lsof -ti:1111,8888); [ \"$r\" -gt 0 ] && exit 1; exit 0)",
		"lighthouse": "lhci --config ./tests/lighthouse/lighthouserc.js autorun"
	},
	"dependencies": {
		"@searchspring/snap-preact": "^0.45.1",
		"@searchspring/snap-preact-components": "^0.45.1",
		"deepmerge": "4.3.1",
		"mobx-react": "7.5.0",
		"preact": "10.9.0"
	},
	"devDependencies": {
		"@babel/core": "^7.21.4",
		"@babel/plugin-proposal-class-properties": "^7.18.6",
		"@babel/plugin-proposal-decorators": "^7.21.0",
		"@babel/plugin-transform-react-jsx": "^7.21.0",
		"@babel/plugin-transform-runtime": "^7.21.4",
		"@babel/preset-env": "^7.21.4",
		"@babel/preset-react": "^7.18.6",
		"@babel/runtime": "^7.21.0",
		"@lhci/cli": "^0.11.0",
		"@searchspring/browserslist-config-snap": "^1.0.6",
		"babel-loader": "^9.1.2",
		"core-js": "^3.30.0",
		"css-loader": "^6.7.3",
		"cypress": "^12.15.0",
		"cypress-wait-until": "^1.7.2",
		"file-loader": "^6.2.0",
		"sass": "^1.60.0",
		"sass-loader": "^13.2.2",
		"style-loader": "^3.3.2",
		"ts-loader": "9.4.2",
		"webpack": "^5.77.0",
		"webpack-bundle-analyzer": "^4.8.0",
		"webpack-cli": "^5.0.1",
		"webpack-dev-server": "^4.13.2",
		"webpack-merge": "^5.8.0"
	},
	"browserslist": {
		"universal": "extends @searchspring/browserslist-config-snap/universal",
		"modern": "extends @searchspring/browserslist-config-snap/modern"
	}
}
