{
	"compilerOptions": {
		"target": "es5",
		"module": "es6",
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist/esm",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"lib": [
			"dom",
			"es2017",
			"es2019"
		],
		"strict": true
	},
	"include": [
		"src",
		"logger",
		"filters",
	],
	"exclude": [
		"node_modules",
		"coverage",
		"**/*.spec.ts",
		"**/*.test.ts",
		"**/tests/*",
		"**/__tests__/*"
	]
}