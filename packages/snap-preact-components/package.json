		"deepmerge": "^4.2.2",
		"mobx-react-lite": "^3.2.2",
		"react-ranger": "^2.1.0",
		"swiper": "^6.8.4"
	},
	"peerDependencies": {
		"preact": "^10.6.2"
	},
	"devDependencies": {
		"@mdx-js/loader": "^1.6.22",
