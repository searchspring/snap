{
	"name": "@searchspring/snap-preact-components",
	"version": "0.32.0",
	"description": "Snap Preact Component Library",
	"author": "Searchspring",
	"license": "MIT",
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"repository": "https://github.com/searchspring/snap",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist/**/*",
		"README.md"
	],
	"scripts": {
		"build": "rm -rf ./dist && tsc && tsc -p tsconfig.cjs.json",
		"build:docs": "build-storybook -o ./docs",
		"dev": "tsc --watch",
		"format": "prettier --write 'src/**/*.{js,jsx,ts,tsx}'",
		"lint": "eslint 'src/components/**/*.{js,jsx,ts,tsx}'",
		"storybook": "start-storybook -p 6006",
		"test": "jest",
		"test:watch": "jest --watch"
	},
	"dependencies": {
		"@emotion/react": "11.9.0",
		"@searchspring/snap-toolbox": "^0.32.0",
		"classnames": "2.3.1",
		"deepmerge": "4.2.2",
		"mobx-react-lite": "3.4.0",
		"react-ranger": "2.1.0",
		"swiper": "6.8.4"
	},
	"peerDependencies": {
		"preact": "10.7.3"
	},
	"devDependencies": {
		"@searchspring/snap-client": "^0.32.0",
		"@searchspring/snap-controller": "^0.32.0",
		"@searchspring/snap-event-manager": "^0.32.0",
		"@searchspring/snap-logger": "^0.32.0",
		"@searchspring/snap-profiler": "^0.32.0",
		"@searchspring/snap-store-mobx": "^0.32.0",
		"@searchspring/snap-tracker": "^0.32.0",
		"@searchspring/snap-url-manager": "^0.32.0",
		"@storybook/addon-actions": "6.4.22",
		"@storybook/addon-controls": "6.4.22",
		"@storybook/addon-docs": "6.4.22",
		"@storybook/addon-essentials": "6.4.22",
		"@storybook/addon-links": "6.4.22",
		"@storybook/builder-webpack5": "6.4.22",
		"@storybook/manager-webpack5": "6.4.22",
		"@storybook/preact": "6.4.22",
		"@storybook/theming": "6.4.22",
		"@testing-library/jest-dom": "5.16.4",
		"@testing-library/preact": "2.0.1",
		"@testing-library/user-event": "13.5.0",
		"@types/react": "16.14.28",
		"@types/react-ranger": "2.0.1",
		"mobx-react": "7.5.0",
		"preact": "10.7.3",
		"react": "16.14.0",
		"react-dom": "16.14.0"
	},
	"sideEffects": false
}
