{
	"name": "@searchspring/snap-shared",
	"private": true,
	"version": "0.58.2",
	"description": "library of shared code utilized by snap packages",
	"author": "Searchspring",
	"license": "MIT",
	"scripts": {
		"build": "rm -rf ./dist && tsc && tsc -p tsconfig.cjs.json",
		"build:docs": "echo 'no docs for common libs'",
		"dev": "tsc --watch",
		"format": "prettier --write 'src/**/*.{js,jsx,ts,tsx}'",
		"lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
		"test": "jest --passWithNoTests",
		"test:watch": "jest --watch"
	},
	"devDependencies": {
		"@searchspring/snap-client": "^0.58.2"
	},
	"sideEffects": false,
	"files": [
		"dist/**/*"
	]
}
