{
	"compilerOptions": {
		"target": "es5",
		"module": "es6",
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist/esm",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"lib": [
			"dom",
			"es2019"
		],
		"strict": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"**/*.test.ts",
		"**/__tests__/*",
		"**/test/*"
	]
}