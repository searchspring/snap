	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"author": "Searchspring",
	"license": "MIT",
	"repository": "https://github.com/searchspring/snap",
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/searchspring"
	},
	"scripts": {
