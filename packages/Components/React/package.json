{
	"name": "@searchspring/snap-preact-components",
	"version": "0.0.8",
	"description": "Snap Preact Component Library",
	"author": "Searchspring",
	"license": "ISC",
	"repository": {
		"type": "git",
		"url": "https://github.com/searchspring/snap-preact-components.git"
	},
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "rm -rf ./dist && tsc && tsc -p tsconfig.cjs.json",
		"dev": "tsc --watch",
		"commit": "cz",
		"format": "prettier --write 'src/**/*.{js,ts,tsx}'",
		"lint": "eslint 'src/components/**/*.{js,ts,tsx}'",
		"storybook": "start-storybook -p 6006",
		"test": "jest",
		"test:watch": "jest --watch",
		"preversion": "npm run lint && npm test && npm run build",
		"version": "standard-version -a",
		"postversion": "git push && git push --tags",
		"storybook:build": "build-storybook -o ./docs"
	},
	"prettier": "@searchspring/prettier",
	"dependencies": {
		"@emotion/react": "^11.1.5",
		"@searchspring/snap-toolbox": "file:../../Toolbox",
		"classnames": "^2.2.6",
		"mobx-react-lite": "^3.2.0",
		"react-ranger": "^2.1.0"
	},
	"peerDependencies": {
		"preact": "^10.5.13"
	},
	"devDependencies": {
		"@searchspring/snap-controller": "file:../../Controller",
		"@searchspring/snap-event-manager": "file:../../EventManager",
		"@searchspring/snap-logger": "file:../../Logger",
		"@searchspring/snap-profiler": "file:../../Profiler",
		"@searchspring/snap-store-mobx": "file:../../Store/MobX"
	},
	"sideEffects": false,
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"./package.json": [
			"prettier --write"
		],
		"*.{js,ts,tsx}": [
			"prettier --write"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
