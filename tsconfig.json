{
	"compilerOptions": {
		"target": "es5",
		"module": "es6",
		"declaration": true,
		"declarationMap": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"lib": [
			"dom",
			"es2017",
			"es2019"
		],
		"strict": false
	},
	"exclude": [
		"**/node_modules/**",
		"**/coverage/**",
		"**/*.spec.ts",
		"**/*.test.ts",
		"**/__tests__/*",
		"**/test/*",
	]
}