{
	"compilerOptions": {
		"target": "es2020",
		"module": "es2020",
		"declaration": true,
		"declarationMap": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"lib": [
			"dom"
		],
		"resolveJsonModule": true,
		"strict": true
	},
	"exclude": [
		"**/node_modules/*",
		"**/coverage/*",
		"**/dist/**",
		"**/*.spec.ts",
		"**/*.spec.tsx",
		"**/*.test.ts",
		"**/*.test.tsx",
		"**/__tests__/*",
		"**/__mocks__/*",
		"**/test/*",
	]
}